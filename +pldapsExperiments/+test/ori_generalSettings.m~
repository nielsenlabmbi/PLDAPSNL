function s = ori_generalSettings

%turn adc channels off
s.datapixx.useAsPorts = 0;
s.datapixx.adc.channels = [];

%turn mouse input on
s.mouse.useAsPort = 1;
s.mouse.use = 1;

%turn saving off
s.pldaps.nosave = 1;

%set orientation and offsets
s.stimulus.offsets = [10 20 30 45];
s.stimulus.angle = 0;
s.stimulus.sf = 0.25;
s.stimulus.range = 121;
s.display.viewdist = 75; 

%configure ports
 s.ports.use = true;
 s.ports.nports = 3;
 s.ports.movable = true;
 s.datapixx.adc.channels = [1 3 5];
 
 
 s. behavior.   reward. nChannels = 3;
 s. behavior.   reward. channel. START = 3; %dac channel for reward delivery
 s. behavior.   reward. channel. LEFT = 2;
 s. behavior.   reward. channel. RIGHT = 1;
 s. behavior.   reward. channel. MIDDLE = 4;